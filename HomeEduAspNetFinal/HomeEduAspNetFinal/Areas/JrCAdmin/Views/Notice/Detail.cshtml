@model NoticeBoard
@{
    ViewData["Title"] = "Detail";
}
<div class="col-md-6 grid-margin stretch-card bg-dark text-light">
    <div class="card d-flex flex-column bg-dark">

       
        <div class="card-body ">
            <h4 style="font-weight:600 !important">Description : <span style="font-weight:200 !important"> @Model.Descriptioon </span></h4>
        </div>
        <div class="card-body ">
            <h5 style="font-weight:600 !important">Date : <span style="font-weight:200 !important"> @Model.NoticeDate.ToString("dd MMMM ") </span></h5>
        </div>
       

    </div>
</div>
<div class="a" style="padding: 0 10px">
    <a asp-action="Index" class="btn btn-outline-secondary">Go Back</a>

</div>

