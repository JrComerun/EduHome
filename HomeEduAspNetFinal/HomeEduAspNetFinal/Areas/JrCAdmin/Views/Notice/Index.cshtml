@model List<NoticeBoard>
@{
    ViewData["Title"] = "Notice";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
                <h2 class="card-title pt-2 mb-0 mr-5 text-light" style="font-size:larger !important;">Notice </h2>
                <a asp-action="Create" class="btn btn-success text-light ml-5" style="cursor:pointer;">Create</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr class="bg-dark font-weight-bold text-light">
                           
                            <th>
                                Description
                            </th>
                            <th>
                                Date Time
                            </th>
                            

                            <th class="text-right">
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (NoticeBoard b in Model)
                        {
                        <tr class="bg-dark font-weight-bold text-light">
                            
                            <td >@b.Descriptioon</td>
                            <td>@b.NoticeDate.ToString("dd MMMM ")</td>
                           

                            <td class="d-flex flex-column align-items-end" >
                                @if (ViewBag.Count > 3)
                                {
                                    <a style="width:80px!important" asp-controller="Notice" asp-action="Detail" asp-route-id="@b.Id" class="btn btn-outline-warning "><i class="mdi mdi-information-outline"></i></a>
                                    <a style="width:80px!important" asp-controller="Notice" asp-action="Update" asp-route-id="@b.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                    <a style="width:80px!important" asp-controller="Notice" asp-action="Delete" asp-route-id="@b.Id" class="btn btn-outline-danger"><i class="mdi mdi-delete"></i></a>
                                }
                                else
                                {
                                    <a style="width:80px!important" asp-controller="Notice" asp-action="Detail" asp-route-id="@b.Id" class="btn btn-outline-warning "><i class="mdi mdi-information-outline"></i></a>
                                    <a style="width:80px!important" asp-controller="Notice" asp-action="Update" asp-route-id="@b.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                }

                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

