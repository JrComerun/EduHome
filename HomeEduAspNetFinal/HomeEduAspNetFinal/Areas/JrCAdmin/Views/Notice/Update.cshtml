@model NoticeBoard
@{
    ViewData["Title"] = "Update";
}
<div class="row d-flex">

    <div class="col-md-6 grid-margin stretch-card bg-dark text-light">
        <div class="card d-flex flex-column bg-dark">


            <div class="card-body ">
                <h4 style="font-weight:600 !important">Description : <span style="font-weight:200 !important"> @Model.Descriptioon </span></h4>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Date : <span style="font-weight:200 !important"> @Model.NoticeDate.ToString("dd MMMM ") </span></h5>
            </div>


        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card bg-dark">
        <div class="card bg-dark text-light">
            <div class="card-body bg-dark">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="@Model.Descriptioon"></label>
                        <input class="form-control" asp-for="@Model.Descriptioon">
                        <span class=" text-danger" asp-validation-for="@Model.Descriptioon"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.NoticeDate"></label>
                        <input class="form-control" asp-for="@Model.NoticeDate">
                        <span class=" text-danger" asp-validation-for="@Model.NoticeDate"></span>
                    </div>


                    <button type="submit" class="btn btn-success mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <partial name="_ScriptsPartial" />

}
