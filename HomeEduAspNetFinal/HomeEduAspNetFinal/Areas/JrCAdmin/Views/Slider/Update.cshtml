@model HomeSlider
@{
    ViewData["Title"] = "Update";
}
<div class="col-md-6 grid-margin stretch-card bg-dark text-light">
    <div class="card d-flex flex-column bg-dark">

        <div class="card-body ">
            <img src="~/assets/img/slider/@Model.BgImage" style="height: 150px !important;width: 200px !important;" />
        </div>
        <div class="card-body ">
            <h4 style="font-weight:600 !important">Title : <span style="font-weight:200 !important"> @Model.Title </span></h4>
        </div>
        <div class="card-body ">
            <h4 style="font-weight:600 !important">Description : <span style="font-weight:200 !important"> @Model.Description </span></h4>
        </div>
    </div>
</div>
<div class="col-md-6 grid-margin stretch-card bg-dark">
    <div class="card bg-dark text-light">
        <div class="card-body">
            <h4 class="card-title bg-dark">Create Category</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Photo"></label>
                    <input class="form-control-file" accept="image/*" asp-for="@Model.Photo">
                    <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span class=" text-danger" asp-validation-for="@Model.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description"></label>
                    <input class="form-control" asp-for="@Model.Description">
                    <span class=" text-danger" asp-validation-for="@Model.Description"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Go Back</a>
            </form>
        </div>
    </div>
</div>



