
@model List<HomeSlider>
@{
    ViewData["Title"] = "Slider";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
                <h2 class="card-title pt-2 mb-0 mr-5 text-light" style="font-size:larger !important;">Slider Images</h2>
                <a asp-action="Create" class="btn btn-success text-light ml-5" style="cursor:pointer;">Create</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr class="bg-dark font-weight-bold text-light">
                            <th>
                                Slider Image
                            </th>
                            <th>
                                Slider Title
                            </th>
                            <th>
                                Slider Description
                            </th>
                            
                            <th class="text-right" >
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (HomeSlider s in Model)
                        {
                            <tr class="bg-dark font-weight-bold text-light">
                                <td><img src="~/assets/img/slider/@s.BgImage" class="img-fluid "style="width:80px !important;height:80px!important;object-fit: cover !important;" /></td>
                                <td style="text-transform:capitalize!important">@s.Title</td>
                                <td style="text-transform:capitalize!important">@s.Description</td>
                                
                                <td class="d-flex flex-column align-items-end" >
                                    @if (ViewBag.Count > 1)
                                    {
                                        <a style="width:80px!important" asp-controller="Slider" asp-action="Detail" asp-route-id="@s.Id" class="btn btn-outline-warning "><i class="mdi mdi-information-outline"></i></a>
                                        <a style="width:80px!important" asp-controller="Slider" asp-action="Update" asp-route-id="@s.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                        <a style="width:80px!important" asp-controller="Slider" asp-action="Delete" asp-route-id="@s.Id" class="btn btn-outline-danger"><i class="mdi mdi-delete"></i></a>
                                    }
                                    else
                                    {
                                        <a style="width:80px!important" asp-controller="Slider" asp-action="Detail" asp-route-id="@s.Id" class="btn btn-outline-warning "><i class="mdi mdi-information-outline"></i></a>
                                        <a style="width:80px!important" asp-controller="Slider" asp-action="Update" asp-route-id="@s.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                    }

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

