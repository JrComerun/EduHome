@model Testimonial
@{
    ViewData["Title"] = "Update";
}
<div class="row d-flex">
    <div class="col-md-6 grid-margin stretch-card bg-dark text-light">
        <div class="card d-flex flex-column bg-dark">

            <div class="card-body ">
                <img src="~/assets/img/testimonial/@Model.Image" style="height: 150px !important;width: 200px !important;" />
            </div>
            <div class="card-body ">
                <h4 style="font-weight:600 !important">Person : <span style="font-weight:200 !important"> @Model.Person </span></h4>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Profession : <span style="font-weight:200 !important"> @Model.Profession </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Say About Us : <span style="font-weight:200 !important"> @Model.SayAboutUs</span></h5>
            </div>

        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card bg-dark">
        <div class="card bg-dark text-light">
            <div class="card-body bg-dark">
                <h4 class="card-title">Create Testimonial</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Photo"></label>
                        <input class="form-control-file" accept="image/*" asp-for="@Model.Photo">
                        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Person"></label>
                        <input class="form-control" asp-for="@Model.Person">
                        <span class=" text-danger" asp-validation-for="@Model.Person"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Profession"></label>
                        <input class="form-control" asp-for="@Model.Profession">
                        <span class=" text-danger" asp-validation-for="@Model.Profession"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.SayAboutUs"></label>
                        <input class="form-control" asp-for="@Model.SayAboutUs">
                        <span class=" text-danger" asp-validation-for="@Model.SayAboutUs"></span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <partial name="_ScriptsPartial" />

}

