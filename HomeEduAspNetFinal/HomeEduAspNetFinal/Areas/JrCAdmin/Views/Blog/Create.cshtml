@model BlogsVM
@{ ViewData["Title"] = "Create"; }
<div class="col-md-6 grid-margin stretch-card bg-dark">
    <div class="card bg-dark text-light">
        <div class="card-body bg-dark">
            <h4 class="card-title">Create Slider</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Blog.Photo"></label>
                    <input class="form-control-file" accept="image/*" asp-for="@Model.Blog.Photo">
                    <span class="text-danger" asp-validation-for="@Model.Blog.Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Blog.Title"></label>
                    <input class="form-control" asp-for="@Model.Blog.Title">
                    <span class=" text-danger" asp-validation-for="@Model.Blog.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Blog.Author"></label>
                    <input class="form-control" asp-for="@Model.Blog.Author">
                    <span class=" text-danger" asp-validation-for="@Model.Blog.Author"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.DetailsOfBlog.Description"></label>
                    <input class="form-control" asp-for="@Model.DetailsOfBlog.Description">
                    <span class=" text-danger" asp-validation-for="@Model.DetailsOfBlog.Description"></span>
                </div>
                <div class="form-group">
                    <select class="custom-select" required name="eventId">
                        <option value="">Open this select menu</option>

                        @foreach (Event e in Model.Events)
                        {
            <option value="@e.Id">@e.Name</option>}
                    </select>
                </div>
                <div class="form-group">
                    <select class="custom-select" required name="courseId">
                        <option value="">Open this select menu</option>

                        @foreach (Course c in Model.Courses)
                        {
            <option value="@c.Id">@c.Name</option>}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Go Back</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <partial name="_ScriptsPartial" />
}