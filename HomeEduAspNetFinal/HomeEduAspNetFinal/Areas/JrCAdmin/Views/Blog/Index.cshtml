@model List<Blog>
@{
    ViewData["Title"] = "Blog";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
                <h2 class="card-title pt-2 mb-0 mr-5 text-light" style="font-size:larger !important;">Blogs </h2>
                <a asp-action="Create" class="btn btn-success text-light ml-5" style="cursor:pointer;">Create</a>
            </div>
            <div class="table-responsive bg-dark">
                <table class="table table-striped">
                    <thead>
                        <tr class="bg-dark font-weight-bold text-light">
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                DateTime
                            </th>
                            <th>
                                Author
                            </th>


                            <th class="text-right">
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Blog b in Model)
                        {
                            <tr class="bg-dark font-weight-bold text-light">
                                <td><img src="~/assets/img/blog/@b.Image" class="img-fluid " style="width:80px !important;height:80px!important;object-fit: cover !important;" /></td>
                                <td style="text-transform:capitalize!important">@b.Title</td>
                                <td>@b.DateTime.ToString("D")</td>
                                <td>@b.Author</td>


                                <td class="d-flex flex-column align-items-end">
                                    @if (ViewBag.Count > 3)
                                    {
                                        <a style="width:80px!important" asp-controller="Blog" asp-action="Detail" asp-route-id="@b.Id" class="btn btn-outline-warning "><i class="mdi mdi-information-outline"></i></a>
                                        <a style="width:80px!important" asp-controller="Blog" asp-action="Update" asp-route-id="@b.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                        <a style="width:80px!important" asp-controller="Blog" asp-action="Delete" asp-route-id="@b.Id" class="btn btn-outline-danger"><i class="mdi mdi-delete"></i></a>
                                    }
                                    else
                                    {
                                        <a style="width:80px!important" asp-controller="Blog" asp-action="Detail" asp-route-id="@b.Id" class="btn btn-outline-warning "><i class="mdi mdi-information-outline"></i></a>
                                        <a style="width:80px!important" asp-controller="Blog" asp-action="Update" asp-route-id="@b.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                    }

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>
                <div class="row justify-content-center mt-3">
                    <nav class="d-flex ">
                        <ul class="pagination">
                            @for (int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                if (i == ViewBag.Page)
                                {
                                    <li class="page-item active diabled"><a class="page-link">@i </a> </li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="Blog" asp-action="Index" asp-route-page="@i">@i</a></li>
                                }
                            }




                        </ul>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>

