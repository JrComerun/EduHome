@model Blog
@{ ViewData["Title"] = "Detail"; }
<div class="col-md-6 grid-margin stretch-card bg-dark text-light">
    <div class="card d-flex flex-column bg-dark">

        <div class="card-body ">
            <img src="~/assets/img/blog/@Model.Image" style="height: 150px !important;width: 200px !important;" />
        </div>
        <div class="card-body ">
            <h4 style="font-weight:600 !important">Blog Title : <span style="font-weight:200 !important"> @Model.Title </span></h4>
        </div>
        <div class="card-body ">
            <h5 style="font-weight:600 !important">Autor : <span style="font-weight:200 !important"> @Model.Author </span></h5>
        </div>
        <div class="card-body ">
            <h5 style="font-weight:600 !important">Description : <span style="font-weight:200 !important"> @Model.DetailsOfBlog.Description </span></h5>
        </div>
        <div class="card-body ">
            <h5 style="font-weight:600 !important">Date : <span style="font-weight:200 !important"> @Model.DateTime.ToString("D") </span></h5>
        </div>
        <div class="card-body ">
            <h5 style="font-weight:600 !important">Event : <span style="font-weight:200 !important"> @Model.Event.Name </span></h5>
        </div>
        <div class="card-body ">
            <h5 style="font-weight:600 !important">Course : <span style="font-weight:200 !important"> @Model.Course.Name </span></h5>
        </div>
      
    </div>
</div>
<div class="a" style="padding: 0 10px">
    <a asp-action="Index" class="btn btn-outline-secondary">Go Back</a>

</div>

