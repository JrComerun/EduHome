@model EventVM
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card bg-dark text-light">
        <div class="card d-flex flex-column bg-dark">

            <div class="card-body ">
                <img src="~/assets/img/event/@Model.Spiker.Image" style="height: 150px !important;width: 200px !important;" />
            </div>
            <div class="card-body ">
                <h4 style="font-weight:600 !important">Spiker Name : <span style="font-weight:200 !important"> @Model.Spiker.FullName </span></h4>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Professsion : <span style="font-weight:200 !important"> @Model.Spiker.Profession </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Description : <span style="font-weight:200 !important"> @Model.Spiker.DetailOfEvent.Event.Name</span></h5>
            </div>

        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card bg-dark">
        <div class="card bg-dark text-light">
            <div class="card-body bg-dark">
                <h4 class="card-title">Create Spiker</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Spiker.Photo"></label>
                        <input class="form-control-file" accept="image/*" asp-for="@Model.Spiker.Photo">
                        <span class="text-danger" asp-validation-for="@Model.Spiker.Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Spiker.FullName"></label>
                        <input class="form-control" asp-for="@Model.Spiker.FullName">
                        <span class=" text-danger" asp-validation-for="@Model.Spiker.FullName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Spiker.Profession"></label>
                        <input class="form-control" asp-for="@Model.Spiker.Profession">
                        <span class=" text-danger" asp-validation-for="@Model.Spiker.Profession"></span>
                    </div>
                    <div class="form-group">
                        <select class="custom-select" required name="eventId">
                            <option value="">Select Event For Spiker</option>

                            @foreach (Event e in Model.Events)
                            {
                                <option value="@e.DetailOfEvent.Id">@e.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <partial name="_ScriptsPartial" />
}


