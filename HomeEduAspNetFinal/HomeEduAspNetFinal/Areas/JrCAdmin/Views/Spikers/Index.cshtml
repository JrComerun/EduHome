@model List<DetailOfEvent>
@{
    ViewData["Title"] = "Spikers";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
                <h2 class="card-title pt-2 mb-0 mr-5 text-light" style="font-size:larger !important;">Spikers </h2>
                <a asp-action="Create" class="btn btn-success text-light ml-5" style="cursor:pointer;">Create</a>
            </div>
            @foreach (DetailOfEvent e in Model)
            {
                <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
                    <img src="~/assets/img/event/@e.Event.Image" class="img-fluid " style="width:80px !important;height:80px!important;object-fit: cover !important; margin-left:80px!important;" />
                    <button type="button" class="btn btn-dark w-100" data-toggle="modal" data-target=".bd-example-modal-lg-event-@e.Event.Id" style="text-transform:capitalize;font-size:22px!important">Event <span class="text-success">@e.Event.Name</span> 's Spikers. for you see click here </button>

                    <div class="modal fade bd-example-modal-lg-event-@e.Event.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="table-responsive bg-dark">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr class="bg-dark font-weight-bold text-light">
                                                <th>
                                                    Image
                                                </th>
                                                <th>
                                                    FullName
                                                </th>
                                                <th>
                                                    Profession
                                                </th>
                                                <th>
                                                    Event
                                                </th>
                                                <th class="text-right">
                                                    Settings
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (SpikersOfEvent s in e.SpikersOfEvents)
                                            {
                                                <tr class="bg-dark font-weight-bold text-light">
                                                    <td><img src="~/assets/img/event/@s.Image" class="img-fluid " style="width:80px !important;height:80px!important;object-fit: cover !important;" /></td>
                                                    <td style="text-transform:capitalize!important">@s.FullName</td>
                                                    <td>@s.Profession </td>
                                                    <td>@s.DetailOfEvent.Event.Name</td>

                                                    <td class="d-flex flex-column align-items-end">

                                                        <a style="width:80px!important" asp-controller="Spikers" asp-action="Detail" asp-route-id="@s.Id" class="btn btn-outline-warning "><i class="mdi mdi-information-outline"></i></a>
                                                        <a style="width:80px!important" asp-controller="Spikers" asp-action="Update" asp-route-id="@s.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                                        <a style="width:80px!important" asp-controller="Spikers" asp-action="Delete" asp-route-id="@s.Id" class="btn btn-outline-danger"><i class="mdi mdi-delete"></i></a>


                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            }
        <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
            <nav class="d-flex ">
                <ul class="pagination">
                    @for (int i = 1; i <= ViewBag.PageCount; i++)
                    {
                        if (i == ViewBag.Page)
                        {
                            <li class="page-item active diabled"><a class="page-link">@i </a> </li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" asp-controller="Spikers" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }
                    }


                </ul>
            </nav>
        </div>
        </div>
    </div>
</div>
