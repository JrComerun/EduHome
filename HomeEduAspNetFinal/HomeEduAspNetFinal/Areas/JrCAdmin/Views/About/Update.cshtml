@model AboutArea
@{
    ViewData["Title"] = "Update";
}
<div class="row d-flex">
    <div class="col-md-6 grid-margin stretch-card bg-dark text-light">
        <div class="card d-flex flex-column bg-dark">
            <div class="card-body ">
                <img src="~/assets/img/about/@Model.Image" style="height: 150px !important;width: 200px !important;" />
            </div>

            <div class="card-body ">
                <h4 style="font-weight:600 !important"> Title : <span style="font-weight:200 !important"> @Model.Title </span></h4>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important"> Description : <span style="font-weight:200 !important"> @Model.Description </span></h5>
            </div>
           

        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card bg-dark">
        <div class="card bg-dark text-light">
            <div class="card-body bg-dark">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control-file" accept="image/*" asp-for="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input class="form-control" asp-for="Title">
                        <span class=" text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input class="form-control" asp-for="Description">
                        <span class=" text-danger" asp-validation-for="Description"></span>
                    </div>
                    

                    <button type="submit" class="btn btn-success mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <partial name="_ScriptsPartial" />
    }


