@model Course

@{
    ViewData["Title"] = "Update";
}
<div class="row d-flex">
    <div class="col-md-6 grid-margin stretch-card bg-dark text-light">
        <div class="card d-flex flex-column bg-dark">

            <div class="card-body ">
                <img src="~/assets/img/course/@Model.Image" style="height: 150px !important;width: 200px !important;" />
            </div>
            <div class="card-body ">
                <h4 style="font-weight:600 !important">Course Name : <span style="font-weight:200 !important"> @Model.Name </span></h4>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Description : <span style="font-weight:200 !important"> @Model.Description </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">About Course : <span style="font-weight:200 !important"> @Model.DetailOfCourse.AboutCourse </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">How to Apply : <span style="font-weight:200 !important"> @Model.DetailOfCourse.HowToApply </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Cerfication : <span style="font-weight:200 !important"> @Model.DetailOfCourse.Certification </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Start Date : <span style="font-weight:200 !important"> @Model.DetailOfCourse.StartDate </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Language : <span style="font-weight:200 !important"> @Model.DetailOfCourse.Language </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Students Count : <span style="font-weight:200 !important"> @Model.DetailOfCourse.Students </span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Duration  : <span style="font-weight:200 !important"> @Model.DetailOfCourse.Duration Month</span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Class Duration : <span style="font-weight:200 !important"> @Model.DetailOfCourse.ClassDuration Hours</span></h5>
            </div>
            <div class="card-body ">
                <h5 style="font-weight:600 !important">Assesment : <span style="font-weight:200 !important"> @Model.DetailOfCourse.Assesments </span></h5>
            </div>

            <div class="card-body ">
                <h5 style="font-weight:600 !important">Price : <span style="font-weight:200 !important"> @Model.DetailOfCourse.Price $</span></h5>
            </div>

        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card bg-dark">
        <div class="card bg-dark text-light">
            <div class="card-body bg-dark">
                <h4 class="card-title">Create Slider</h4>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Photo"></label>
                        <input class="form-control-file" accept="image/*" asp-for="@Model.Photo">
                        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input class="form-control" asp-for="@Model.Name">
                        <span class=" text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <input class="form-control" asp-for="@Model.Description">
                        <span class=" text-danger" asp-validation-for="@Model.Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.AboutCourse"></label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.AboutCourse">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.AboutCourse"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.HowToApply"></label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.HowToApply">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.HowToApply"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.Certification"></label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.Certification">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.Certification"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.StartDate"></label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.StartDate">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.StartDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.Language"></label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.Language">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.Language"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.Students"></label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.Students">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.Students"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.Duration">Duration Month</label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.Duration">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.Duration"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.ClassDuration">Class Duration Hours</label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.ClassDuration">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.ClassDuration"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.Assesments"></label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.Assesments">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.Assesments"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.DetailOfCourse.Price"></label>
                        <input class="form-control" asp-for="@Model.DetailOfCourse.Price">
                        <span class=" text-danger" asp-validation-for="@Model.DetailOfCourse.Price"></span>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <partial name="_ScriptsPartial" />
}

