@model VideoTour
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
                <h2 class="card-title pt-2 mb-0 mr-5 text-light" style="font-size:larger !important;">Video Tour </h2>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr class="bg-dark font-weight-bold text-light">
                            <th>
                                Video Title
                            </th>
                            <th>
                                Board Title
                            </th>
                            <th>
                                Video Link
                            </th>



                            <th class="text-right">
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr class="bg-dark font-weight-bold text-light">

                            <td style="text-transform:capitalize!important">@Model.VideoTitle</td>
                            <td>@Model.BoardTitle</td>
                            <td>@Model.VideoLink</td>


                            <td class="d-flex flex-column align-items-end">
                              
                                <a style="width:80px!important" asp-controller="VideoAbout" asp-action="Update" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>

                            </td>
                        </tr>


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


