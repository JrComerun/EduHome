@model List<ProfessionOfTeacher>
@{
    ViewData["Title"] = "Profession";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
                <h2 class="card-title pt-2 mb-0 mr-5 text-light" style="font-size:larger !important;">Professions </h2>
                <a asp-action="Create" class="btn btn-success text-light ml-5" style="cursor:pointer;">Create</a>
            </div>
            <div class="table-responsive bg-dark">
                <table class="table table-striped">
                    <thead>
                        <tr class="bg-dark font-weight-bold text-light">

                            <th>
                                Profession
                            </th>



                            <th class="text-right">
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ProfessionOfTeacher b in Model)
                        {
                            <tr class="bg-dark font-weight-bold text-light">

                                <td style="width:50%!important">@b.Profession</td>



                                <td class="d-flex flex-column align-items-end">



                                    <a style="width:80px!important" asp-controller="Profession" asp-action="Update" asp-route-id="@b.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>



                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="row justify-content-center mt-3">
                    <nav class="d-flex ">
                        <ul class="pagination">
                            @for (int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                if (i == ViewBag.Page)
                                {
                                    <li class="page-item active diabled"><a class="page-link">@i </a> </li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="Profession" asp-action="Index" asp-route-page="@i">@i</a></li>
                                }
                            }




                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>



