@model ProfessionOfTeacher
@{
    ViewData["Title"] = "Update";
}
<div class="row d-flex">
    <div class="col-md-6 grid-margin stretch-card bg-dark text-light">
        <div class="card d-flex flex-column bg-dark">


            <div class="card-body ">
                <h4 style="font-weight:600 !important">Profession : <span style="font-weight:200 !important"> @Model.Profession </span></h4>
            </div>
            


        </div>
    </div>
</div>
<div class="col-md-6 grid-margin stretch-card bg-dark">
    <div class="card bg-dark text-light">
        <div class="card-body bg-dark">

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="@Model.Profession"></label>
                    <input class="form-control" asp-for="@Model.Profession">
                    <span class=" text-danger" asp-validation-for="@Model.Profession"></span>
                </div>



                <button type="submit" class="btn btn-success mr-2">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Go Back</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <partial name="_ScriptsPartial" />

}

