@model LoginVM
@{
    ViewData["Title"] = "Login";
}
<!-- Banner Area Start -->
@await Component.InvokeAsync("SectionTitle", new { title = "Login", source = ".." })
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            <h5>Please login using account detail bellow.</h5>
                            <div asp-validation-summary="ModelOnly" style="color: #EC1C23 !important" class=" jrc-val"></div>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="jrc-form">
                                    <input asp-for="UserName" placeholder="Username">
                                    <span asp-validation-for="UserName"></span>
                                </div>
                                <div class="jrc-form">
                                    <input asp-for="Password" placeholder="Password">
                                    <span asp-validation-for="Password"></span>
                                </div>


                                <div class="button-box">

                                    <button type="submit" class="default-btn">Login</button>
                                    <a style="display: block; width: 215px;" asp-controller="Account" asp-action="ForEmailResetPassword" class="default-btn">Forget Password</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
@section Scripts{
    <partial name="_ScriptsPartial" />
}
