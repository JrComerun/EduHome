@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}
<!-- Banner Area Start -->
@await Component.InvokeAsync("SectionTitle", new { title = "ResetPassword", source = "../.." })
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                            <h5>Please enter Password and CheckPassword For Reset Password </h5>
                            <div asp-validation-summary="ModelOnly" style="color: #EC1C23 !important" class=" jrc-val"></div>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="jrc-form">
                                    <input asp-for="Password" placeholder="Password">
                                    <span asp-validation-for="CheckPassword"></span>
                                </div>
                                <div class="jrc-form">
                                    <input asp-for="CheckPassword" placeholder="CheckPassword">
                                    <span asp-validation-for="CheckPassword"></span>
                                </div>

                                <div class="button-box">

                                    <button type="submit" class="default-btn"> Reset Password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
@section Scripts{
    <partial name="_ScriptsPartial" />
}

