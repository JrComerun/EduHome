@model List<Teacher>
@foreach (Teacher t in Model)
{
    <div class="col-md-3 col-sm-4 col-xs-12" id="teacher-list">
        <div class="single-teacher mb-45">
            <div class="single-teacher-img">
                <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@t.Id"><img src="~/assets/img/teacher/@t.Image" alt="teacher"></a>
            </div>
            <div class="single-teacher-content text-center">
                <h2><a asp-controller="Teacher" asp-action="Detail" asp-route-id="@t.Id">@t.FullName</a></h2>
                <h4>@t.ProfessionOfTeacher.Profession</h4>
                <ul>
                    @foreach (SocMedOfTeacher ts in t.SocMedOfTeachers)
                    {
                        <li><a href="@ts.Link">@Html.Raw(ts.Icon)</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
}
