@model List<Blog>

@if (ViewBag.Primary != "primary")
{<div class="row">
        @foreach (Blog b in Model)
        {
            <div class="col-md-@ViewBag.Col col-sm-6 col-xs-12">
                <div class="single-blog mb-60">
                    <div class="blog-img">
                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@b.Id"><img src="~/assets/img/blog/@b.Image" alt="blog"></a>
                        <div class="blog-hover">
                            <i class="fa fa-link"></i>
                        </div>
                    </div>
                    <div class="blog-content">
                        <div class="blog-top">
                            <p>By @b.Author  /  @b.DateTime.ToString("d MMMM yyyy") /  </p>
                        </div>
                        <div class="blog-bottom">
                            <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@b.Id">@((b.Title.Length < 23)? b.Title : b.Title.Substring(0,23) + "...")  </a></h2>
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@b.Id">read more</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

else
{
    @foreach (Blog b in Model.Take(3))
    {
        <div class="single-post mb-30 ">
            <div class="single-post-img">
                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@b.Id">
                    <img src="~/assets/img/blog/@b.Image" style="width:95px!important;height:95px!important;" alt="post">
                    <div class="blog-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="single-post-content" style="margin-right:0px!important;">
                <h4><a asp-controller="Blog" asp-action="Detail" asp-route-id="@b.Id">@((b.Title.Length < 23)? b.Title : b.Title.Substring(0,23) + "...") </a></h4>
                <p>By /@b.Author  @b.DateTime.ToString("d MMMM yyyy") </p>
            </div>
        </div>
    }
}





