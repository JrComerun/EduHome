@model AboutArea
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>WELCOME TO <span>@Model.Title</span></h2>
                    <p>@Html.Raw(Model.Description)</p>
                    <a class="default-btn" href="#">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/assets/img/about/@Model.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
