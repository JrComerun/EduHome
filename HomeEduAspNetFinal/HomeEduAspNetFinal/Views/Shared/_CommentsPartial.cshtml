@model Comment


<div class="row " style="margin-top:10px;">
    <div class="col-sm-1">
        <div class="thumbnail">
            <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
        </div><!-- /thumbnail -->
    </div><!-- /col-sm-1 -->

    <div class="col-sm-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>@Model.UserName</strong> <span class="text-muted">commented @Model.CreateTime</span>
            </div>
            <div class="panel-body">
                @Model.Message
            </div><!-- /panel-body -->
        </div><!-- /panel panel-default -->
    </div><!-- /col-sm-5 -->
</div><!-- /row -->


