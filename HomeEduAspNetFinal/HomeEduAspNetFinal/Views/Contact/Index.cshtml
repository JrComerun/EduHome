
@{
    ViewData["Title"] = "Index";
}
<!-- Banner Area Start -->
@await Component.InvokeAsync("SectionTitle", new { title = "Contact" })
<!-- Banner Area End -->
<!-- Contact Start -->

<div class="contact-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="contact-contents text-center">
                    <div class="single-contact mb-65">
                        <div class="contact-icon">
                            <img src="~/assets/img/contact/contact1.png" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>address</h3>
                            <p>135, First Lane, City Street</p>
                            <p>New Yourk City, USA</p>
                        </div>
                    </div>
                    <div class="single-contact mb-65">
                        <div class="contact-icon">
                            <img src="~/assets/img/contact/contact2.png" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>address</h3>
                            <p>135, First Lane, City Street</p>
                            <p>New Yourk City, USA</p>
                        </div>
                    </div>
                    <div class="single-contact">
                        <div class="contact-icon">
                            <img src="~/assets/img/contact/contact3.png" alt="contact">
                        </div>
                        <div class="contact-add">
                            <h3>address</h3>
                            <p>135, First Lane, City Street</p>
                            <p>New Yourk City, USA</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="reply-area">
                    <h3>Contact Us</h3>
                    <p>Send Message to EduHome </p>
                    <form id="contact-form-jrc " method="post">
                        <div class="row">
                            @if (!User.Identity.IsAuthenticated)
                            {   <div class="col-md-12">
                                    <p class="jrc-form">Name <span id="ConNameError"></span></p>
                                    <input type="text" name="Name" id="Name-contact">
                                </div>
                                <div class="col-md-12">
                                    <p class="jrc-form">Email <span id="ConEmailError"></span></p>
                                    <input type="text" name="Email" id="Email-contact">

                                </div>
                                <div class="col-md-12">
                                    <p class="jrc-form">Subject <span id="ConSubjectError"></span></p>
                                    <input type="text" name="Subject" id="Subject-contact">

                                    <p class="jrc-form">Massage  <span id="ConMessageError"></span></p>
                                    <textarea name="Message" id="Message-contact" cols="15" rows="10"></textarea>

                                </div>
                            }
                            else
                            {

                                <div class="col-md-12">
                                    <p class="jrc-form">Subject <span id="ConSubjectError"></span></p>
                                    <input type="text" name="Subject" id="Subject-contact">

                                    <p class="jrc-form">Massage <span id="ConMessageError"></span></p>
                                    <textarea name="Message " id="Message-contact" cols="15" rows="10"></textarea>

                                </div>
                            }

                        </div>
                        <button type="button" class="reply-btn" id="buttonCon"><span>send message</span></button>
                        <span id="Form-contact" class="form-messege " style="padding-left: 20px !important; color: #EC1C23 !important;"></span>
                        @*<span id="Form-contact2" class="form-messege " style="padding-left: 20px !important; color: #EC1C23 !important;"></span>*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
<div class="map-area">
    <!-- google-map-area start -->
    <div class="google-map-area">
        <!--  Map Section -->
        <div id="contacts" class="map-area">
            <div id="googleMap" style="width:100%;height:440px;"></div>
        </div>
    </div>
</div>